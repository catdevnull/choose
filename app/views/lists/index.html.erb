<h1>Listing lists</h1>

<table>
  <tr>
    <th>Url</th>
    <th>List</th>
    <th>Lastedited</th>
    <th>Lastviewed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= list.url %></td>
    <td><%= list.list %></td>
    <td><%= list.lastedited %></td>
    <td><%= list.lastviewed %></td>
    <td><%= link_to 'Show', list %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Destroy', list, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

